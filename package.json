{
  "name": "fsm_viz",
  "version": "1.0.0",
  "description": "Extract FSM state machines from SystemVerilog and generate Mermaid diagrams",
  "type": "module",
  "engines": {
    "node": ">=20.0.0"
  },
  "main": "dist/index.js",
  "bin": {
    "fsm_viz": "dist/cli.mjs"
  },
  "scripts": {
    "build:wasm": "bash scripts/build-wasm.sh",
    "build:cli": "node esbuild.cli.mjs",
    "build": "vite build",
    "dev": "vite",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "commander": "^12.0.0",
    "mermaid": "^11.0.0",
    "tree-sitter-wasms": "^0.1.13",
    "web-tree-sitter": "^0.26.3"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "esbuild": "~0.24.0",
    "tree-sitter-cli": "^0.24.7",
    "tree-sitter-systemverilog": "^0.3.1",
    "typescript": "^5.0.0",
    "vite": "6.0.6",
    "vite-plugin-top-level-await": "^1.4.0",
    "vite-plugin-wasm": "^3.0.0",
    "vitest": "^2.0.0"
  },
  "keywords": [
    "systemverilog",
    "fsm",
    "state-machine",
    "mermaid",
    "visualization"
  ],
  "license": "MIT"
}
